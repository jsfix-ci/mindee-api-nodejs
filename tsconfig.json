{
  "extends": "@tsconfig/node16/tsconfig.json",
  "compilerOptions": {
    "target": "es6",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "resolveJsonModule": true,
    "allowJs": true,
    "declaration": true,
    "outDir": "dist",
    "rootDir": "./",
    "baseUrl": "./",
    "paths": {
        "@mindee/*": ["mindee/*"],
        "@api/*": ["mindee/api/*"],
        "@documents/*": ["mindee/documents/*"],
        "@fields/*": ["mindee/documents/fields/*"],
        "@errors/*": ["mindee/errors/*"],
        "#apiPaths": ["tests/data/api_paths.json"]
      }
  },
  "include": ["./mindee/**/*.ts"],
  "exclude": ["./node_modules/", "./dist/", "./tests/**/*.spec.ts"]
}
